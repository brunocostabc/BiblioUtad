@model BiblioUTAD.Models.CriarAdminViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Criar Administrador";
}

<header class="create-admin-header">
    <h1>@ViewData["Title"]</h1>
</header>

<section class="admin-content__dashboard">
    <form asp-action="CriarAdministrador" method="post" class="form-container">
        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" id="nome" class="form-control" placeholder="Digite o nome do administrador" oninput="preencherEmail()" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="text" id="email" class="form-control" readonly />
            <small class="form-text text-muted">O e-mail será gerado automaticamente com base no nome fornecido.</small>
        </div>

        <div class="form-group">
            <label asp-for="Password">Palavra-Passe</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Digite a Palavra-Passe" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-buttons">
            <button type="submit" class="btn btn-success">Criar</button>
            <a asp-action="Utilizadores" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</section>
<script src="~/js/main.js" asp-append-version="true"></script>

